# -------------------- BACKEND --------------------

# Banco de Dados PostgreSQL (Neon DB)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# JWT Secrets (gere com: openssl rand -base64 32)
JWT_SECRET="seu-jwt-secret-aqui-minimo-32-caracteres"
JWT_REFRESH_SECRET="seu-refresh-secret-aqui-minimo-32-caracteres"

# JWT Expiration
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_SALT_ROUNDS=""

# Server
PORT=3333
NODE_ENV="development"

# CORS (URLs do frontend, separadas por vírgula)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# -------------------- FRONTEND --------------------

# API URL (sem barra no final)
VITE_API_URL="http://localhost:3333"
